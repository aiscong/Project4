<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
     <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
   <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.galleries.any? %>
      <h3>Galleries (<%= @user.galleries.count %>)</h3>
      <ol class="galleries">
          <%= render @galleries %>
      </ol>
          <%= will_paginate @galleries %>
    <% end %>
  </div>
</div>